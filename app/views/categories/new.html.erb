<h2 align="center"> Create new category</h2>
<%= render 'shared/errors', obj:@category%>
<div class = "row">
  <div class = "col-xs-12 ">
    <%=  form_for(@category, :html => {Class: "form-horizontal", role:"form"}) do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%=  f.text_field :name, class: "form-control", placeholder:"Enter category name", autofocus: true%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Create category", class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [<%= link_to "Cancel request and return to article listing", articles_path %>]
    </div>
  </div>
</div>
<%= debug(params) if Rails.env.development? %>