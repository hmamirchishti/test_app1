<div align="center">
  <%= will_paginate @user %>
</div>
<% @user.each do |user| %>
  <ul class="list-unstyled">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4 center">
        <li><%= link_to gravatar_for(user), user_path(user)%></li>
    <li class="article-title"><%= link_to user.username, user_path(user) %></li>
    <li><small><%= pluralize(user.articles.count,"article") if user.articles %></small></li>
        <% if logged_in? and current_user.admin? %>
        <li><%= link_to "Delete this user", user_path(user),class: "btn btn-danger btn-xs", method: :delete, data: {confirm: "Are you sure you want to delete this user and all related articles?"} %></li>
          <% end %>
      </div>
  </div>
  </ul>
<% end %>
<div align="center">
  <%= will_paginate @user %>
</div>
